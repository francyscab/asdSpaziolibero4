<!DOCTYPE html>
<html>
<head>
    <title>Istituti - Caffettone 3000</title>
    <link href="/css/style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f5f5f5;
        }
        .container {
            margin-top: 40px;
        }
        h1 {
            font-weight: 500;
            color: #3f51b5;
            margin-bottom: 30px;
        }
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            background-color: #ffffff;
        }
        .card:hover {
            transform: translateY(-10px);
        }
        .card-title {
            color: #3f51b5;
            font-weight: bold;
            margin-bottom: 15px;
        }
        .card-text {
            color: #757575;
            margin-bottom: 10px;
        }
        .material-icons {
            vertical-align: middle;
            margin-right: 8px;
        }
        .btn-outline-danger {
            color: #f44336;
            border-color: #f44336;
        }
        .btn-outline-danger:hover {
            background-color: #f44336;
            color: white;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>ðŸ‘‹ Benvenuto, <%= user.name %></h1>
        <a href="/auth/logout" class="btn btn-outline-danger">
            <i class="material-icons">exit_to_app</i> Logout
        </a>
    </div>
    <hr class="my-4">
    <h1>Istituti</h1>
    <form method="GET" action="/istituti" class="mb-4">
        <div class="input-group">
            <select name="citta" class="form-select">
                <option value="">Tutte le cittÃ </option>
                <% const cittaUniche = [...new Set(istituti.map(i => i.citta))]; %>
                <% cittaUniche.forEach(function(citta) { %>
                    <option value="<%= citta %>"><%= citta %></option>
                <% }); %>
            </select>
            <button type="submit" class="btn btn-primary">Filtra</button>
        </div>
    </form>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% istituti.forEach(function(istituto) { %>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="material-icons">school</i> <%= istituto.nome %>
                        </h5>
                        <p class="card-text">
                            <i class="material-icons">location_on</i> Indirizzo: <%= istituto.indirizzo %>
                        </p>
                        <p class="card-text">
                            <i class="material-icons">location_city</i> CittÃ : <%= istituto.citta %>
                        </p>
                        <p class="card-text">
                            <i class="material-icons">calendar_today</i> Data Creazione: <%= new Date(istituto.data_creazione).toLocaleDateString() %>
                        </p>
                        <a href="<%= istituto.detailLink %>" class="stretched-link"></a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 